<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF" >

    <RelativeLayout
        android:id="@+id/realat_top"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#17AFEE" >

        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@null"
            android:padding="10dip"
            android:src="@drawable/back_btn" />

        <TextView
            android:id="@+id/myname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="漏盘数据"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />
    </RelativeLayout>
    
    <LinearLayout
        android:id="@+id/biaotou"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/realat_top"
        android:background="#103E5C"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone" >

        <TextView
            android:id="@+id/xuhao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="序号" />
        
        <TextView
            android:id="@+id/guizu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="柜组" />

        <TextView
            android:id="@+id/bianma"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="编码" />

        <TextView
            android:id="@+id/mingcheng"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="名称" />
        
        <TextView
            android:id="@+id/danwei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="单位" />
        
        <TextView
            android:id="@+id/shoujia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:text="售价" />
    </LinearLayout>
    
    <org.han.lsb_shop.view.XListView
        android:id="@+id/listview_notices"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/biaotou"
        android:background="#f2f2f2"
        android:cacheColorHint="#00000000"
        android:divider="#00000000"
        android:dividerHeight="0px" >
    </org.han.lsb_shop.view.XListView>

</RelativeLayout>